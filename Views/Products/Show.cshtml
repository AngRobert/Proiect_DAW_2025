@model Proiect_DAW_2025.Models.Product

<div class="container my-4">

    <div class="row">
        <div class="col-md-5 text-center">
            <img src="~/Images/placeholder2.png"
                 class="img-fluid rounded border"
                 alt="@Model.Title" />
        </div>

        <div class="col-md-7 position-relative">

            @if (User.IsInRole("Admin") ||
                        (User.IsInRole("Colaborator") &&
                        Model.CollaboratorId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)) {

                <div class="position-absolute top-0 end-0 d-flex flex-column gap-2">

                    <a asp-controller="Products"
                       asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-outline-secondary btn-sm">
                        ✏️ Editează produs
                    </a>

                    <form method="post"
                          asp-controller="Products"
                          asp-action="Delete"
                          asp-route-id="@Model.Id">
                        <button type="submit"
                                class="btn btn-outline-danger btn-sm">
                            🗑️ Șterge produs
                        </button>
                    </form>

                </div>
            }

            <h2 class="fw-bold">@Model.Title</h2>

            <div class="mb-2 text-warning">
                @ViewBag.Score
            </div>

            <p class="mt-3">
                @Model.Description
            </p>

            <div class="d-flex gap-2 mt-4">

                <form method="post"
                      asp-controller="Cart"
                      asp-action="Add"
                      asp-route-id="@Model.Id">
                    <button class="btn btn-primary px-4">
                        🛒 Adaugă în coș
                    </button>
                </form>

                <form method="post"
                      asp-controller="Wishlist"
                      asp-action="Add"
                      asp-route-id="@Model.Id">
                    <button class="btn btn-outline-danger px-4">
                        ♥ Adaugă în wishlist
                    </button>
                </form>

            </div>

        </div>
    </div>

    <hr class="my-4" />

    <h5>Reviews</h5>

    @if (Model.Reviews != null && Model.Reviews.Any()) {
        @foreach (var rev in Model.Reviews) {
            <div class="border rounded p-3 mb-3 position-relative">

                <small class="text-muted position-absolute top-0 end-0 m-2">
                    @rev.User.UserName
                </small>

                <p class="mb-1 fw-bold">
                    Rating: @rev.Rating
                </p>

                <p class="mb-1">
                    @rev.Text
                </p>

                <small class="text-muted">
                    @rev.Date.ToString("dd MMM yyyy")
                </small>

            </div>
        }
    }
    else {
        <p class="text-muted">No comments yet.</p>
    }

    <hr />

    <h5>FAQs</h5>

    @if (Model.FAQs != null && Model.FAQs.Any()) {
        @foreach (var q in Model.FAQs) {
            <div class="border rounded p-3 mb-3">
                <p class="mb-1 fw-bold">@q.Text</p>
                <p class="mb-1">@q.Answer</p>
            </div>
        }
    }
    else {
        <p class="text-muted">No questions yet.</p>
    }

</div>

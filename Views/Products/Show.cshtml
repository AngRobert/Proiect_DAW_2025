@model Proiect_DAW_2025.Models.Product

<div class="container my-4">

    <div class="row">
        <div class="col-md-5 text-center">
            <img src="~/Images/placeholder2.png"
                 class="img-fluid rounded border"
                 alt="@Model.Title" />
        </div>

        <div class="col-md-7 position-relative">

            @if (User.IsInRole("Admin") ||
                        (User.IsInRole("Colaborator") &&
                        Model.CollaboratorId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)) {

                <div class="position-absolute top-0 end-0 d-flex flex-column gap-2">

                    <a asp-controller="Products"
                       asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-outline-secondary btn-sm">
                        ✏️ Editează produs
                    </a>

                    <form method="post"
                          asp-controller="Products"
                          asp-action="Delete"
                          asp-route-id="@Model.Id">
                        <button type="submit"
                                class="btn btn-outline-danger btn-sm">
                            🗑️ Șterge produs
                        </button>
                    </form>

                </div>
            }

            <h2 class="fw-bold">@Model.Title</h2>

            <div><i class="bi bi-globe"></i> @Model.Category.CategoryName</div>

            <br />

            <div class="mb-2 text-warning">
                Scor: @ViewBag.Score
            </div>

            <p class="mt-3">
                @Model.Description
            </p>

            <div class="d-flex gap-2 mt-4">

                <form method="post"
                      asp-controller="Cart"
                      asp-action="Add"
                      asp-route-id="@Model.Id">
                    <button class="btn btn-primary px-4">
                        🛒 Adaugă în coș
                    </button>
                </form>

                <form method="post"
                      asp-controller="Wishlist"
                      asp-action="Add"
                      asp-route-id="@Model.Id">
                    <button class="btn btn-outline-danger px-4">
                        ♥ Adaugă în wishlist
                    </button>
                </form>

            </div>

        </div>
    </div>

    <hr class="my-4" />

    <h5>Recenzii</h5>

    @if (Model.Reviews != null && Model.Reviews.Any()) {
        @foreach (var rev in Model.Reviews) {
            <div class="border rounded p-3 mb-3 position-relative">

                <small class="text-muted position-absolute top-0 end-0 m-2">
                    @rev.User.UserName
                </small>


                @if (rev.Rating > 0)
                {
                    <p class="mb-1 fw-bold">
                        Rating: @rev.Rating
                    </p>
                }

                <p class="mb-1">
                    @rev.Text
                </p>

                <small class="text-muted">
                    @rev.Date.ToString("dd MMM yyyy HH:mm")
                </small>

                <br />
                <br />

                @if (User.IsInRole("Admin") ||
                          rev.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                {

                    <a asp-controller="Reviews"
                    asp-action="Edit"
                    asp-route-id="@rev.Id"
                    class="btn btn-outline-secondary btn-sm">
                        ✏️ Editează recenzia
                    </a>

                    <form method="post"
                    asp-controller="Reviews"
                      asp-action="Delete"
                          asp-route-id="@rev.Id">
                    <button type="submit"
                            class="btn btn-outline-danger btn-sm">
                            🗑️ Șterge recenzia
                    </button>
                    </form>
                }

            </div>
        }
    }
    else {
        <p class="text-muted">Nu există nicio recenzie încă.</p>
    }


    <div class="container mt-5">
        <div class="row justify-content-center">

            <div class="col-md-8 col-lg-6">

                <div class="card shadow-sm">
                    <div class="card-body">

                        <h3 class="card-title mb-4 text-center">
                            Adaugă o recenzie
                        </h3>

                        <form asp-action="Show" asp-controller="Products" method="post">

                            <input type="hidden" name="ProductId" value="@Model.Id" />

                            <div class="mb-3">
                                <label class="form-label"> Text recenzie </label>
                                <textarea class="form-control" rows="4" name="Text"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label"> Rating </label>
                                <input class="form-control" type="number" name="Rating"/>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    Anulează
                                </a>

                                <button type="submit" class="btn btn-primary px-4">
                                    Adaugă
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>


    <hr />

    <h5>FAQ</h5>

    @if (Model.FAQs != null && Model.FAQs.Any()) {
        @foreach (var q in Model.FAQs) {
            <div class="border rounded p-3 mb-3">
                <p class="mb-1 fw-bold">@q.Text</p>
                <p class="mb-1">@q.Answer</p>
            </div>
        }
    }
    else {
        <p class="text-muted">Nu există nicio întrebare încă.</p>
    }

</div>

@model Proiect_DAW_2025.Models.Product

<div class="container my-4">

    <div class="row">

        <div class="col-md-5 text-center">
            <img src="~/Images/placeholder.jpg"
                 class="img-fluid rounded border"
                 alt="@Model.Title" />
        </div>

        <div class="col-md-7">

            <h2 class="fw-bold">@Model.Title</h2>

            <div class="mb-2 text-warning">
                @ViewBag.Score 
            </div>

            <p class="mt-3">
                @Model.Description
            </p>

            <div class="d-flex gap-2 mt-4">

                <form method="post"
                      asp-controller="Cart"
                      asp-action="Add"
                      asp-route-id="@Model.Id">
                    <button class="btn btn-primary px-4">
                        🛒 Add to Cart
                    </button>
                </form>

                <form method="post"
                      asp-controller="Wishlist"
                      asp-action="Add"
                      asp-route-id="@Model.Id">
                    <button class="btn btn-outline-danger px-4">
                        ♥ Add to Wishlist
                    </button>
                </form>

            </div>

        </div>
    </div>

    <hr class="my-4" />

    <h5>Comments</h5>

    @if (Model.Reviews != null && Model.Reviews.Any()) {
        @foreach (var comm in Model.Reviews) {
            <div class="border rounded p-3 mb-3">

                <p class="mb-1">@comm.Rating</p>
                <p class="mb-1">@comm.Text</p>

                <small class="text-muted">
                    @comm.Date.ToString("dd MMM yyyy")
                </small>

            </div>
        }
    }
    else {
        <p class="text-muted">No comments yet.</p>
    }

    <hr />

    @if (Model.FAQs != null && Model.FAQs.Any()) {
        @foreach (var q in Model.FAQs) {
            <div class="border rounded p-3 mb-3">

                <p class="mb-1">@q.Text</p>
                <p class="mb-1">@q.Answer</p>

            </div>
        }
    }
    else {
        <p class="text-muted">No questions yet.</p>
    }
</div>

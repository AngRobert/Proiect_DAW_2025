<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proiect_DAW_2025</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proiect_DAW_2025.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Products" asp-action="Index">
                    OnlineShop
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav me-4">
                        <li class="nav-item">
                            <a class="nav-link active"
                               asp-controller="Products"
                               asp-action="Index">
                                Home
                            </a>
                        </li>



                        @if (User.IsInRole("Admin")) 
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Products"
                                   asp-action="New">
                                    Adăugare produs
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Categories"
                                   asp-action="Index">
                                    Afișare categorii
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Categories"
                                   asp-action="New">
                                    Adăugare categorie
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Colaborator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Products"
                                   asp-action="New">
                                    Adăugare produs
                                </a>
                            </li>
                        }
                    </ul>

                    <form class="d-flex mx-auto" role="search" style="max-width: 400px;">
                        <input class="form-control me-2"
                               type="search"
                               placeholder="Search" />
                        <button class="btn btn-outline-success" type="submit">
                            Search
                        </button>
                    </form>

                    <ul class="navbar-nav ms-auto align-items-center">

                        @if (User.Identity != null && User.Identity.IsAuthenticated) {
                            <li class="nav-item me-2">
                                <span class="navbar-text">
                                    👤 @User.Identity.Name
                                </span>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown">
                                Account
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (User.Identity != null && User.Identity.IsAuthenticated) {
                                    <li class="dropdown-item text-muted">
                                        Logged in as <br />
                                        <strong>@User.Identity.Name</strong>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post"
                                              asp-area="Identity"
                                              asp-page="/Account/Logout">
                                            <button type="submit"
                                                    class="dropdown-item text-danger">
                                                Logout
                                            </button>
                                        </form>
                                    </li>
                                }
                                else {
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Identity"
                                           asp-page="/Account/Login">
                                            Login
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Identity"
                                           asp-page="/Account/Register">
                                            Register
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Proiect_DAW_2025 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
